{
  "name": "code-mirror-cast",
  "displayName": "codeMirrorCast",
  "publisher": "alexandre",
  "description": "",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeMirrorCast.start",
        "title": "codeMirrorCast: Start Code Sync"
      },
      {
        "command": "codeMirrorCast.stop",
        "title": "codeMirrorCast: Stop Code Sync"
      },
      {
        "command": "codeMirrorCast.openFrontend",
        "title": "codeMirrorCast: Ouvrir l'interface web"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Code Mirror Cast Sync",
      "properties": {
        "codeMirrorCast.fontSize": {
          "type": "number",
          "default": 16,
          "minimum": 8,
          "description": "Taille de police dans l'interface de visualisation (en pixels)"
        },
        "codeMirrorCast.excludeFiles": {
          "type": "array",
          "description": "Regex patterns for files to exclude from sync.",
          "default": [
            "\\.env(\\..+)?$",
            "\\.key$",
            "\\.pem$",
            "secrets?"
          ],
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "prismjs": "^1.30.0",
    "ws": "^8.18.3"
  }
}
