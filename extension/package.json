{
  "name": "code-mirror-cast-sync",
  "displayName": "code-mirror-cast-sync",
  "description": "Send active file content to mirror server",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-mirror-cast-sync.start",
        "title": "Start Code Sync"
      },
      {
        "command": "code-mirror-cast-sync.stop",
        "title": "Stop Code Sync"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Code Mirror Cast Sync",
      "properties": {
        "codeMirrorCast.fontSize": {
          "type": "number",
          "default": 16,
          "minimum": 8,
          "description": "Taille de police dans l'interface de visualisation (en pixels)"
        },
        "codeMirrorCast.excludeFiles": {
        "type": "array",
        "description": "Regex patterns for files to exclude from sync.",
        "default": ["\\.env(\\..+)?$", "\\.key$", "\\.pem$", "secrets?"],
        "items": { "type": "string" }
      }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}